{
  "name": "krokedil/dibs-easy-for-woocommerce",
  "description": "Nexi Checkout",
  "authors": [
    {
      "name": "Krokedil AB",
      "email": "info@krokedil.se"
    }
  ],
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "squizlabs/php_codesniffer": "^3.5.4",
    "php-stubs/woocommerce-stubs": "^8.4",
    "wp-coding-standards/wpcs": "^3.0.0",
    "woocommerce/woocommerce-sniffs": "^1.0",
    "woocommerce/qit-cli": "^0.4.0",
    "10up/wp_mock": "^1.0",
    "wpify/scoper": "3.1.3"
  },
  "scripts": {
    "get-changelog": "bash .github/scripts/new-version.sh",
    "update-version": "bash .github/scripts/new-version.sh update",
    "create-changelog": "bash .github/scripts/new-changelog.sh",
    "pre-release-check": [
      "bash .github/scripts/check-changelog-master.sh",
      "bash .github/scripts/check-version-and-compat.sh"
    ],
    "lint": "vendor/bin/phpcs . --standard=phpcs.xml --extensions=php -q -s",
    "lint:fix": "vendor/bin/phpcbf . --standard=phpcs.xml --extensions=php -q -s",
    "lint:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcs --standard=phpcs.xml --extensions=php -q -s",
    "lint:fix:changes": "git diff --name-only HEAD~1 | grep '\\.php$' | xargs vendor/bin/phpcbf --standard=phpcs.xml --extensions=php -q -s"
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "wpify/scoper": true
    }
  },
  "extra": {
    "wpify-scoper": {
      "prefix": "KrokedilNexiCheckoutDeps",
      "folder": "dependencies",
      "autorun": true,
      "globals": [
        "wordpress",
        "woocommerce"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "Krokedil\\Nexi\\": "src/"
    }
  },
  "minimum-stability": "dev"
}
